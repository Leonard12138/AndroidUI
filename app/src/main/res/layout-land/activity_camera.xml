        <!-- Camera Switch Button -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/CameraText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/camera"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_alignParentBottom="true"/>

            <com.kyleduo.switchbutton.SwitchButton
                android:id="@+id/CameraSwitchButton"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                app:kswBackColor="@color/switch_color_states"
                app:kswThumbColor="#FFFFFF" />
        </RelativeLayout>



        <!-- Alignment Switch Button -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Alignment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="@string/alignment"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_alignParentBottom="true"/>

            <com.kyleduo.switchbutton.SwitchButton
                android:id="@+id/AlignmentSwitchButton"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:text="@string/app_name"
                android:textSize="16sp"
                app:kswBackColor="@color/switch_color_states"
                app:kswTextAdjust="-2dp"
                app:kswTextExtra="8dp"
                app:kswThumbColor="#FFFFFF" />

        </RelativeLayout>





    </LinearLayout>
    <!-- Leave Room Button -->
    <Button
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:background="@drawable/leave_room_button_background"
        android:text="@string/leave_room_button_text"
        android:textAllCaps="false"
        android:textColor="#227FDE"
        android:layout_below="@id/buttons_layout"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:textSize="18sp"/>

    <!-- First TextView (Camera 2) -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView1"
        android:text="@string/camera_2"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/textView2" />

    <!-- Second TextView (Phone Manufacturer) -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:text="@string/phone_manufacturer"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"/>
</RelativeLayout>
